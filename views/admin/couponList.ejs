<div class="wrapper" id="main">
  <!-----============== coupon body========================-->
  <section class="tabcontent1" id="coupon-list">
    <br />
    <div class="tab100">
      <div class="tab1 topnav">
        <div class="form-group search_">
          <input
            class="form-control"
            id="myInput"
            type="text"
            placeholder="Search.."
          />
        </div>
      </div>
    </div>

    <div id="coupons11" class="tabcontent2">
      <table class="table ">
        <thead>
          <tr>
            <th style="padding: 15px 0px; width: 15%;">&nbsp; MERCHANT</th>
            <th style="padding: 15px 0px; width: 10%;">&nbsp; NAME</th>
            <th style="padding: 15px 0px; width: 10%;">&nbsp; START</th>
            <th style="padding: 15px 0px; width: 10%;">&nbsp; EXPIRY</th>
            <th style="padding: 15px 0px; width: 10%;">&nbsp; APPROVAL</th>
            <th style="padding: 15px 0px; width: 10%;">&nbsp; TYPE</th>
            <th style="padding: 15px 0px; width: 10%;">&nbsp; QUANTITY</th>
            <th style="padding: 15px 0px; width: 10%;">&nbsp; SOLD</th>
          </tr>
        </thead>
        <tbody id="myTable">
          <% coupons.forEach(function(coupon){ %>
          <%if(coupon.startDate.getDate()<10){%> <% var
          sdate=`0${coupon.startDate.getDate()}`%> <%} else {%> <% var
          sdate=coupon.startDate.getDate()%> <%}%>
          <%if(coupon.startDate.getMonth()<9){%> <% var
          smonth=`0${coupon.startDate.getMonth()+1}`%> <%} else {%> <% var
          smonth =coupon.startDate.getMonth()+1%> <%}%> <% var
          syear=coupon.startDate.getFullYear()%> <%
          startDate=`${sdate}/${smonth}/${syear}`%>
          <%if(coupon.expireDate.getDate()<10){%> <% var
          edate=`0${coupon.expireDate.getDate()}`%> <%} else {%> <% var
          edate=coupon.expireDate.getDate()%> <%}%>
          <%if(coupon.expireDate.getMonth()<9){%> <% var
          emonth=`0${coupon.expireDate.getMonth()+1}`%> <%} else {%> <% var
          emonth =coupon.expireDate.getMonth()+1%> <%}%> <% var
          eyear=coupon.expireDate.getFullYear()%> <%
          expireDate=`${edate}/${emonth}/${eyear}`%>
          <%if(coupon.approvalDate.getDate()<10){%> <% var
          adate=`0${coupon.approvalDate.getDate()}`%> <%} else {%> <% var
          adate=coupon.approvalDate.getDate()%> <%}%>
          <%if(coupon.approvalDate.getMonth()<9){%> <% var
          amonth=`0${coupon.approvalDate.getMonth()+1}`%> <%} else {%> <% var
          amonth =coupon.approvalDate.getMonth()+1%> <%}%> <% var
          ayear=coupon.approvalDate.getFullYear()%> <%
          approvalDate=`${adate}/${amonth}/${ayear}`%>
          <tr>
            <td><%=coupon.businessName%></td>
            <td><%=coupon.offerName%></td>
            <td><%=startDate%></td>
            <td style="color: red;"><%=expireDate%></td>
            <td style="color: green;"><%=approvalDate%></td>
            <td><%=coupon.couponType%></td>
            <td class="c_code"><%=coupon.quantity%></td>
            <td class="c_code"><%=coupon.sold%></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </section>
  <!--============== end reviews body========================-->
