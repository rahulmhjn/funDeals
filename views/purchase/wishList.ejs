<% include ../partials/header.ejs%>
<section class="wishlistOuter">
<div class="upperuserProf">
            <a href="/user/profile" >Profile</a>
            <a href="/wish-list" class="active">Wishlist</a>
            <a href="/myorder">Orders</a>
             <a href="/buy/hdPoint" >HD Points</a>
             <a data-toggle="modal" data-target="#exampleModal1b"href="">Benefits</a>
             <a data-toggle="modal" data-target="#exampleModal1r" href="">Refer A Friend</a>
        </div>
   <%if(!currentUser.wishList||currentUser.wishList.totalQty<=0||!currentUser.wishList.totalQty){%>
    <section class="">
            <div class="cartContainer">
                    <div class="cart-details">
                        
                        <div class="emptycart" style="margin:auto;text-align: center;">
                            <img src="/images/GIrft_Wrap.gif" alt="">
                            <p class="text_12">"Your Wishlist is empty. Please add your favorite coupons to view here."
                              </p>
                        </div>
                        
                    </div>
            </div>
        </section>
    
        
    <%}else{%>

<div class="wishlistContainer">
                <h3>My Wishlist <hr class="hrhead"></h3>
                <div class="mainWishlist">
                    <%for(id in currentUser.wishList.items){%>
                        <%let coupon = currentUser.wishList.items[id]%>
                    <div class="cart">
                        <div class="cartImage">
                            <img src="<%=coupon.item.image.url%>" alt="">
                        </div>
                        <div class="cartDetail">
                            <div class="cartHeading">
                                <h3><%=coupon.item.offerName%></h3>
                            </div>
                            <div class="cartBy">

<h4>HappyDeal by <br><a href="/show-merchant/<%=coupon.item.author%>"><span><i class="fas fa-store-alt blk"></i> <%=coupon.item.businessName%></span><b class="name_view"> (View Details)</b></a></h4>

                            </div>
                            
                            <div class="dealtype">
                                <h3>Deal Type- <span><%=coupon.item.offerType%></span></h3>
                            </div>
                            <div class="unitLeft">
                                <%if(wishListObj[id]==0){%>
                                <h3 style="color:red">Only <span><%=wishListObj[id]%></span> Units(s) In Left</h3>
                                <%}else{%>
                                <h3>Only <span><%=wishListObj[id]%></span> Units(s) In Left</h3>
                                <%}%>
                                <h4>Price &#8377; <span><%=coupon.item.adminAmount%></span></h4>
                            </div>
                            <div class="cartButtons">
                                <button ><a style="text-decoration:none" href="/wish-list/remove/<%=id%>">Remove</a></button>
                                <hr>
                                <%if(wishListObj[id]!=0){%>
                                <button ><a style="text-decoration:none" href="/wish-list/move-to-cart/<%=id%>">Move To Cart</a></button>
                                <%}%>
                            </div>
                        </div>
                    </div>
                 
                    <%}%>
                   
                </div>
            </div>
        </section>
<%}%>


</section>
<div class="modal fade" id="exampleModal1r" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog width700" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              
            </div>
            <div class="modal-body">
              
                <img src="/images/coming.jpg" width="100%">
          </div>
        </div>
      </div>
    </div>
      <div class="modal fade" id="exampleModal1b" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog width700" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
                
              </div>
              <div class="modal-body">
                
                  <img src="/images/coming.jpg" width="100%">    
            </div>
          </div>
        </div>
      </div>
<% include ../partials/footer.ejs%>

