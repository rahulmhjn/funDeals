    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet"> 
    <script src="/javascripts/all.js"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>HappinessDeals</title>
</head>
<body>
    <!-- Preloader -->
    <div class="preloading">
        <div class="preUpper">
            <img src="/images/preloadergif.gif" alt="Loading">
        </div>
    </div>
  
<% if(success &&success.length){%>

<div class="flash2">
            <i class="fas fa-times close1"></i>
            <div class="innerflash">
                <i class="fas fa-check-double i"></i>
                <%=success%>
            </div>
    </div>
<% }%> 
<% if(error && error.length){%>
<div class="flash blink">
            <i class="fas fa-times close1"></i>
            <div class="innerflash">
                <i class="fas fa-times i"></i>
              <%=error%>
            </div>
    </div>
<% }%>

<div class="otpVerifyMain">
    <div class="upperContainerOtp">
            <div class="container">
                <div class="signImage">
                    <img src="/images/demo2.jpeg" alt="">
                </div>
                <div class="sideLogin">
                    <form action="/auth/verify-email" method="POST">
                            <div class="enterOtp">
                                    <h3><b>Enter The OTP Sent To Your Email</b></h3>
                                    <div class="inputdiv">
                                            <input type="text" inputmode="numeric" autofocus maxlength="1" oninput="nextFocus(this);" name="a" autocomplete="off"/>
                                            <input type="text" inputmode="numeric" maxlength="1" oninput="nextFocus(this);" name="b" 
                                            autocomplete="off"/>
                                            <input type="text" inputmode="numeric" maxlength="1" oninput="nextFocus(this);" name="c"
                                            autocomplete="off" />
                                            <input type="text" inputmode="numeric" maxlength="1" oninput="this.value=this.value.replace(/[^0-9]/g,'');" name="d" 
                                            autocomplete="off"/>
                                    </div>
                                    <button class="submit">Submit</button>
                                    
                                    <a href="/auth/resend/verify-email">Resend OTP</a>
                                   <%if(currentUser.typeAccess==="user"){%>
                                    <div class="goback">
                                        <a href="/"><div class="adiv"><i class="fas fa-arrow-right i"></i><h5>Go Back</h5></div></a>
                                    </div>
                                   <%}%>

                                    <%if(currentUser.typeAccess==="merchant"){%>
                                     <div class="goback">
                                         <a href="/auth/logout"><div class="adiv"><i class="fas fa-arrow-right i"></i><h5>Logout</h5></div></a>
                                     </div>
                                    <%}%>

                                </div>
                                
                    </form>
                </div>
            </div>
        </div>
    </div>
    

        <!-- Custom js -->
        <script src="/javascripts/jquery-3.4.1.min.js"></script>
    <script src="/javascripts/custom.js"></script>
