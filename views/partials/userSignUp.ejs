                             <i class="fas fa-mobile-alt i"></i>
                             <input type="tel" placeholder="Phone Number *" inputmode="numeric"  pattern="[0-9]{10}" maxlength="10" name="number" required>
                     </div>
                     <div class="email in">
                         <i class="fas fa-envelope-square i"></i>
                         <input type="email" name="email" placeholder="Email *" id="" required>
                     </div>
                     <div class="password in">
                             <i class="fas fa-key i"></i>
                             <input type="text" name="confirmPassword" placeholder="Password *" id="" required>
                     </div>
                     <div class="password in">
                             <i class="fas fa-key i"></i>
                             <input type="password" name="password" placeholder="Confirm Password *" id="" required>
                             <i class="fas fa-eye" onclick="showpassword(this)" style="margin: auto;"></i>
                     </div>
          <div class="address1">

                                <div class="dropdown">
                                                <h3><select type="text" class="select_" placeholder="Buiseness Name" onchange="statemerchantchange(this)"
                                                    name="state"
                                                    ></h3>
                                                    <option value="0" selected>State*</option>
                                                    <%for(state in settings){%>
                                                        <option value="<%=state%>"><%=state%></option>
                                                    <%}%>
                                                    
                                                   
        
                                                </select>
                                            </div>
                                            <div class="dropdown">
                                                    <h3><select type="text" class="select_" placeholder="Buiseness Name"
                                                        name="city"
                                                        onchange="districtmerchantchange(this)"></h3>
                                                        <option value="0" selected>City*</option>

                                                    <%for(state in settings){%>
                                                        <%for(city in settings[state]){%>
                                                            <option value="<%=city%>" class="<%=state%>"><%=city%></option>    
                                                        <%}%>
                                                        
                                                   <%}%>
            
                                                    </select>
                                                </div>
                                                <div class="dropdown">
                                                        <h3><select type="text" class="select_" 
                                                            name="area"
                                                            placeholder="Buiseness Name"></h3>

                                                  
                                                    <option value="0">Area*</option>
                                                <%for(state in settings){%>
                                                <%for(city in settings[state]){%>
                                                <%for(area of settings[state][city]){%>
                                                            <option value="<%=area%>" class="<%=city%>"><%=area%></option>    
                                                <%}%>  
                                                    <%}%>
                                                        
                                                    <%}%>
                                                           
                                                        </select>
                                                    </div>
                         
                                          
    </div> <!-- .addressLine1 -->
                    
